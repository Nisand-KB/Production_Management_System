<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#f83600"
                android:endColor="#64f11712"/>
            <stroke
                android:width="3dp"
                android:color="#64f11712" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#0072ff"
                android:endColor="#6400c6ff"
                android:angle="270"
                />
            <stroke
                android:width="3dp"
                android:color="#f0cb35" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>