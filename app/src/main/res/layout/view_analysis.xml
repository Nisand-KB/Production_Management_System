<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/a"
    tools:context="com.example.dell.pms.View_analysis"
   >
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/today"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/vb1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginTop="-110dp"
        android:layout_marginRight="30dp"
        android:text="Today analysis"
        android:background="@drawable/blue"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:alpha="100"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/year"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/vb3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginTop="-110dp"
        android:layout_marginRight="30dp"
        android:textSize="20dp"
        android:background="@drawable/blue"
        android:text="Weekly analysis"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:alpha="100"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/month"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/vb2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginTop="-110dp"
        android:layout_marginRight="30dp"
        android:textSize="18dp"
        android:text="Monthly analysis"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/blue"
        android:alpha="100"/>







</LinearLayout>
